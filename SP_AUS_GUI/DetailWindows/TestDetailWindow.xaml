<Window x:Class="SP_AUS_GUI.DetailWindows.TestDetailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SP_AUS_GUI.DetailWindows"
        mc:Ignorable="d"
        Title="PCR test" Height="500" Width="800" MinHeight="500" MinWidth="300">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="Číslo testu:"/>
            <TextBox Text="{Binding TestNumber, Mode=OneWay}" IsReadOnly="True"/>
            <TextBlock Text="Číslo pacienta:"/>
            <TextBox Text="{Binding PatientNumber, Mode=OneWay}" IsReadOnly="True"/>
            <TextBlock Text="Dátum testu:"/>
            <TextBox Text="{Binding TestDate, Mode=OneWay}" IsReadOnly="True"/>
            <TextBlock Text="Čas testu:"/>
            <TextBox Text="{Binding TestTime, Mode=OneWay}" IsReadOnly="True"/>
            <TextBlock Text="Kód pracoviska:"/>
            <TextBox Text="{Binding Workplace, Mode=OneWay}" IsReadOnly="True"/>
            <TextBlock Text="Okres:"/>
            <TextBox Text="{Binding District, Mode=OneWay}" IsReadOnly="True"/>
            <TextBlock Text="Kraj:"/>
            <TextBox Text="{Binding Region, Mode=OneWay}" IsReadOnly="True"/>
            <TextBlock Text="Pozitívny:"/>
            <TextBox Text="{Binding TestResultDetailDisplay, Mode=OneWay}" IsReadOnly="True"/>
            <TextBlock Text="Hodnota testu:"/>
            <TextBox Text="{Binding TestValueDisplay, Mode=OneWay}" IsReadOnly="True"/>
            <TextBlock Text="Poznámka:"/>
            <TextBox Text="{Binding Comment, Mode=OneWay}" Height="100" IsReadOnly="True"/>
        </StackPanel>
    </Grid>
</Window>
